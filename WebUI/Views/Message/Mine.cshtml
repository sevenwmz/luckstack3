@using (Html.BeginForm())
{
    <div>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6">
                <label><input type="checkbox" asp-for="CheckAll" />全选</label>
                <button type="submit" asp-page="/Message/Mine" name="submit" value="read" class="btn btn-primary rounded fa fa-check-circle">已读</button>
                <button type="submit" asp-page="/Message/Mine" name="submit" value="delete" class="btn border-secondary rounded fa fa-times-circle">删除</button>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">时间</div>
            <div class="col-sm-2"><a href="#">订阅种类<i class="fa fa-cog"></i></a></div>
            <div class="col-sm-8">内容</div>
            <hr />
        </div>


        @for (int i = 0; i < Model.Items.Count; i++)
        {

            string fontWeight = Model.Items[i].HasCheck ? string.Empty : "font-weight:500";
            <div class="row text-bold" style="@fontWeight">
                <div class="col-sm-1">
                    <label>
                        @Html.CheckBoxFor(m=>m.Items[i].HasCheck)
                        @Html.HiddenFor(m=>m.Items[i].Id)
                    </label>
                </div>
                @if (Model.Items[i].HasRead)
                {
                    <div class="col-sm-1"><a class="fa fa-calendar">@Model.Items[i].PublishTime</a></div>
                    <div class="col-sm-2"><span><a href="#"><i class="fa fa-times-circle"></i></a>@Model.Items[i].MessageStatus.GetDescription()</span></div>
                    <div class="col-sm-8"><span>@Model.Items[i].Content</span></div>
                }
                else
                {
                    <div class="col-sm-1"><strong><a class="fa fa-calendar" @Model.Items[i].PublishTime></a></strong></div>
                    <div class="col-sm-2"><span><a href="#"><i class="fa fa-times-circle"></i></a><strong>@Model.Items[i].MessageStatus.GetDescription()</strong></span></div>
                    <div class="col-sm-8"><span><strong>@Model.Items[i].Content</strong></span></div>
                }
            </div>
        }
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6">
                <label><input type="checkbox" asp-for="CheckAll" />全选</label>
                <button type="submit" asp-page="/Message/Mine" name="submit" value="read"  class="btn btn-primary rounded fa fa-check-circle">已读</button>
                <button type="submit" asp-page="/Message/Mine" name="submit" value="delete" class="btn border-secondary rounded fa fa-times-circle">删除</button>
            </div>
        </div>



        @{
            int currentPageIndex;
            if (Convert.ToInt32(ViewContext.RouteData.Values["id"]) == 0)
            {
                currentPageIndex = 1;
            }
            else
            {
                currentPageIndex = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
            }
            int pagingId = (currentPageIndex - 1) / 10 + 1;
        }

        <nav aria-label="Page navigation example" class="mt-3">
            <ul class="pagination">

                @if (currentPageIndex > 1)
                {
                    <li class="page-item">
                        <a class="page-link" aria-label="Private" href="/Message/Mine/@(currentPageIndex - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }@*/*else nothing*/*@
                @{
                    int pagingLength = 10;
                    int startPaging = 1 + (pagingId - 1) * pagingLength;

                    if (pagingId * pagingLength * 2 > Model.SumOfMessage)
                    {
                        pagingLength = (Model.SumOfMessage % pagingLength) / 2;
                    }
                }
                @for (int i = startPaging; i <= startPaging + pagingLength - 1; i++)
                {
                    if (currentPageIndex == i)
                    {
                        <li class="page-item page-link" style="background-color:rgba(0, 0, 0, 0.72);color:white">@(i)</li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="/Message/Mine/@i">@(i)</a></li>
                    }
                }

                @if (currentPageIndex < (Model.SumOfMessage / Const.PAGE_SIZE))
                {
                    <li class="page-item">
                        <a class="page-link" aria-label="Next" href="/Message/Mine/@(currentPageIndex + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }@*/*else nothing*/*@

            </ul>
        </nav>
    </div>
}

