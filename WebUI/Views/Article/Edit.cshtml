@section style{
    <style>
        .field-validation-error {
            color: #b94a48;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #b94a48;
        }

        input[type="checkbox"].input-validation-error {
            border: 0 none;
        }

        .validation-summary-errors {
            color: #b94a48;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}
@using (Html.BeginForm())
{
    <div style="border:dashed#d8c8c8 3px;padding:25px;background-color:#f0f69c">
        <p>你还有未使用的草稿（<a href="#">查看全部</a>）。</p>
        <p>点击<a href="#"> 这里 </a>使用最近一次生成的草稿。</p>
    </div>
    <div class="form-group">
        <label><strong>标题：（* 必填）</strong></label>
        @Html.TextBoxFor(a => a.Title, new { @class = "form-control", placeholder = "来一个醒目的标题吧" })
        @Html.ValidationMessageFor(a => a.Title)
    </div>
    <div class="form-group">
        <label><strong>内容：（* 必填）</strong></label>
        @Html.TextAreaFor(a => a.Body, 14, 4, new { @class = "form-control", placeholder = "伟大的内容将从这里开始！" })
        @Html.ValidationMessageFor(a => a.Body)
    </div>
    <div class="form-group">
        <label><i class="fa fa-question-circle"></i><strong>添加到系列：</strong></label>
        <div class="input-group input-group-combined">
            @Html.DropDownListFor(a => a.ChoosSeries, ViewData["SeriesDropDownList"] as List<SelectListItem>, "---Select---", new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Series)
            <div class="input-group-append">
                <p class="btn btn-outline-secondary"> ➕新系列</p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label><strong>关键字：（* 必填）</strong></label>
        @Html.TextBoxFor(a => a.Keywords, new { @class = "form-control", placeholder = "用空格分割，总长度不超过25个字符" })
    </div>
    <div class="form-group">
        <label><strong>摘要：（* 建议填写）</strong></label>
        @Html.TextAreaFor(a => a.Summary, 4, 4, new { @class = "form-control", placeholder = "不填写的话，系统会截取文章前255字作为摘要显示" })
    </div>
    <div class="form-group">
        <label><i class="fa fa-question-circle"></i><strong>之前用过的广告：</strong></label>
        <div class="input-group input-group-combined">
            @Html.DropDownListFor(a => a.ChoosAd, ViewData["AdDropDownList"] as List<SelectListItem>, "---Select---", new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Ad)
            <div class="input-group-append">
                <p class="btn btn-outline-secondary"> ➕新系列</p>
            </div>
        </div>
    </div>
    <div style="border:dashed#d8c8c8 3px;padding:25px;background-color:#f0f69c">
        <p class="text-right">
            @Html.LabelFor(a => a.HasNewAd)
            @Html.CheckBoxFor(a => a.HasNewAd)
        </p>
        <div class="form-group">
            <label><strong>文字内容：（* 必填）</strong></label>
            @Html.TextBoxFor(a => a.ContentOfAd, new { @class = "form-control", placeholder = "最多不超过24个字符" })
        </div>
        <div class="form-group">
            <label><strong>链接：（* 必填）</strong></label>
            @Html.TextBoxFor(a => a.WebSite, new { @class = "form-control", placeholder = "http或https开头的网址" })
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary rounded">提交</button>
        <button type="submit" class="btn border-secondary rounded">保存</button>
    </div>
}