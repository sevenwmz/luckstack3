@model ViewModel.ChildAction.ChatRoomModel



@foreach (var item in Model.ChatRooms)
{
    if (Model.CurrentUserId == null)
    {
        @Html.Partial("_HistoryChat", item)
        continue;
    }//else nothing


    if (item.Author.AuthorId == Model.CurrentUserId)
    {
        if (item.Reply.Id == 0)
        {
            @Html.Partial("_MyHistoryChat", item)
        }
        else
        {
            @Html.Partial("_ChatWithOther", item)
        }
    }
    else
    {
        if (item.Reply.Id == 0)
        {
            @Html.Partial("_HistoryChat", item)
        }
        else
        {
            @Html.Partial("_HistoryChatWith", item)
        }
    }
}

