@model ViewModel.Password.ResetModel
@{
    ViewData["Title"] = "修改密码·一起帮";
    Layout = "~/Views/Shared/_LayoutBigColumn.cshtml";
}

@section Title{
    <i class="fa fa-lock"></i> 修改密码
}
@section Descirption{
    <ol>
        <li class="pt-2 b,">现在已经通过了验证，直接输入新密码即可。</li>
        <li class="pt-2 b,">不要和之前的密码一致哦。</li>
    </ol>
}
@section style{
    <style>
        .field-validation-error {
            color: #b94a48;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #b94a48;
        }

        input[type="checkbox"].input-validation-error {
            border: 0 none;
        }

        .validation-summary-errors {
            color: #b94a48;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}
@using (Html.BeginForm(new { @class = "col-md-4 pb-5" }))
{
    <div>
        <div class="form-group">
            <label><strong>验证码（* 必填）</strong></label>
            @Html.PasswordFor(r => r.VerifyCode, new { @class = "form-control", placeholder = "不少于4个字符" })
            @Html.ValidationMessageFor(r => r.VerifyCode)
        </div>
        <div class="form-group">
            <label><strong>新密码：（* 必填）</strong></label>
            @Html.PasswordFor(r => r.Password, new { @class = "form-control", placeholder = "不少于4个字符" })
            @Html.ValidationMessageFor(r => r.Password)
        </div>
        <div class="form-group">
            <label><strong>确认密码：（* 必填）</strong></label>
            @Html.PasswordFor(r => r.ConfrimPassword, new { @class = "form-control", placeholder = "请再输入一次密码" })
            @Html.ValidationMessageFor(r => r.ConfrimPassword)
        </div>
        <button type="submit" class="btn btn-primary">提交</button>
        <button type="reset" class="btn btn-light border border-secondary">重填</button>
    </div>
}