@model ViewModel.Password.ChangeModel
@{
    ViewData["Title"] = "修改密码·一起帮";
    Layout = "~/Views/Shared/_LayoutBigColumn.cshtml";
}

@section Title{
    <i class="fa fa-lock"></i> 修改密码
}
@section Descirption{
    <ol>
        <li class="pt-2 b,">即使在已登录的状态下，也要再输入一次“原密码”，是出于安全性的考虑。</li>
    </ol>
}
@section style{
    <style>
        .field-validation-error {
            color: #b94a48;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #b94a48;
        }

        input[type="checkbox"].input-validation-error {
            border: 0 none;
        }

        .validation-summary-errors {
            color: #b94a48;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}
@using (Html.BeginForm(new { @class = "col-md-4 pb-5" }))
{
    <div>
        <div class="form-group">
            <label><strong>原密码：（* 必填）</strong></label>
            @Html.PasswordFor(p=>p.OldPwd,new {@class="form-control" ,placeholder="不少于4个字符" })
            @Html.ValidationMessageFor(p=>p.OldPwd)
        </div>
        <div class="form-group">
            <label><strong>新密码：（* 必填）</strong></label>
            @Html.PasswordFor(p=>p.NewPwd,new {@class="form-control" ,placeholder="不少于4个字符" })
            @Html.ValidationMessageFor(p=>p.NewPwd)
        </div>
        <div class="form-group">
            <label><strong>确认密码：（* 必填）</strong></label>
            @Html.PasswordFor(p=>p.ConfrimPwd,new {@class="form-control" ,placeholder="请再输入一次密码" })
            @Html.ValidationMessageFor(p=>p.ConfrimPwd)
        </div>
        <button type="submit" class="btn btn-primary">提交</button>
        <button type="reset" class="btn btn-light border border-secondary">重填</button>
    </div>
}


