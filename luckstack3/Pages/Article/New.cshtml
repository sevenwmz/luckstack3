@page
@model _17bang.NewOfArticleModel
@{
    ViewData["Title"] = "文章发布·一起帮";
    Layout = "_LayoutForNewTask";
}

@section Title{ <span class="fa fa-pencil-square-o ">文章发布</span> }

@section LowRightShow{

    <div>
        <div class="text-right">
            <a href="#" class="text-right"><i class="fa fa-pencil-square-o"></i>修改</a>
        </div>
        <div>
            <div>
                <span>用户 ： </span>
                <a href="#">@Model.UserInfo.NickName</a>
                <a href="#">@Model.UserInfo.Level</a>
                <a href="#" class="text-right"><i class="fa fa-pencil-square-o"></i>修改</a>
            </div>
            <div>
                <span>性别 ： </span>
                <span>@Model.UserInfo.Gender</span>
            </div>
            <div>
                <span>生日 ： </span>
                <span>@Model.UserInfo.Birthday</span>
                <span>@Model.UserInfo.Constellation</span>
            </div>
            <div>
                <p>关注 : </p>
                @for (int i = 0; i < Model.Keyword.Count; i++)
                {
                    <span class="text-white badge bg-dark">@Model.Keyword[i].Name</span>
                }
            </div>
            <div>
                <p>自我介绍 ： </p>
                <p>@Model.UserInfo.SelfIntroduction</p>
            </div>
        </div>
    </div>
}
@section style{
    <style>
        .field-validation-error {
            color: #b94a48;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #b94a48;
        }

        input[type="checkbox"].input-validation-error {
            border: 0 none;
        }

        .validation-summary-errors {
            color: #b94a48;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}
<form method="post">
    <div style="border:dashed#d8c8c8 3px;padding:25px;background-color:#f0f69c">
        <p>你还有未使用的草稿（<a href="#">查看全部</a>）。</p>
        <p>点击<a href="#"> 这里 </a>使用最近一次生成的草稿。</p>
    </div>
    <div class="form-group">
        <label><strong>标题：（* 必填）</strong></label>
        <input asp-for="NewArticle.Title" class="form-control" placeholder="来一个醒目的标题吧">
        <span asp-validation-for="NewArticle.Title"></span>
    </div>
    <div class="form-group">
        <label><strong>内容：（* 必填）</strong></label>
        <textarea asp-for="NewArticle.Body" class="form-control" style="line-height:14;"></textarea>
        <span asp-validation-for="NewArticle.Body"></span>
    </div>
    <div class="form-group">
        <label><i class="fa fa-question-circle"></i><strong>添加到系列：</strong></label>
        <div class="input-group input-group-combined">
            <select class="form-control" asp-for="NewArticle.Series" asp-items="Model.SeriesOfSelect"></select>
            <span asp-validation-for="NewArticle.Series"></span>
            <div class="input-group-append">
                <p class="btn btn-outline-secondary"> ➕新系列</p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label><strong>关键字：（* 必填）</strong></label>
        <input asp-for="Keyword" class="form-control" placeholder="用空格分割，总长度不超过25个字符">
    </div>
    <div class="form-group">
        <label><strong>摘要：（* 建议填写）</strong></label>
        <textarea asp-for="NewArticle.Summary" class="form-control" style="line-height:4;" placeholder="不填写的话，系统会截取文章前255字作为摘要显示"></textarea>
    </div>
    <div class="form-group">
        <label><i class="fa fa-question-circle"></i><strong>之前用过的广告：</strong></label>
        <div class="input-group input-group-combined">
            <select class="form-control" asp-for="NewArticle.Ad" asp-items="Model.AdOfArticle"></select>
            <div class="input-group-append">
                <p class="btn btn-outline-secondary"> ➕新系列</p>
            </div>
        </div>
    </div>
    <div style="border:dashed#d8c8c8 3px;padding:25px;background-color:#f0f69c">
        <p class="text-right"><label><input type="checkbox" disabled="disabled" />修改 </label></p>
        <div class="form-group">
            <label><strong>文字内容：（* 必填）</strong></label>
            <input asp-for="NewArticle.ContentOfAd" class="form-control" placeholder="最多不超过24个字符">
        </div>
        <div class="form-group">
            <label><strong>链接：（* 必填）</strong></label>
            <input asp-for="NewArticle.WebSite" class="form-control" placeholder="http或https开头的网址">
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary rounded">提交</button>
        <button type="submit" class="btn border-secondary rounded">保存</button>
    </div>
</form>
